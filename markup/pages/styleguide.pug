doctype html
html(class="no-js", lang="ru")

    include ../components/head/head.pug
    include ../components/checkbox/checkbox.pug
    include ../components/radio/radio.pug
    include ../components/footer/footer.pug
    include ../components/btn/btn.pug

    head
        +head({title: 'Styleguide'})
    body.page
        |%=symbols=%

        section.page__wrapper

            //- Include your components here
            h1 Styleguide

            +checkbox({
              label: "Сделал селфи с акулой",
              name: "selfie",
              value: "selfie with shark",
              disabled: true,
              checked: true
            })

            +checkbox({
              label: 'Обгорел на пляже',
              name: 'selfi',
              checked: true,
            })

            +radio({
              label: "Pink для iOS",
              name: "product",
              value: "iOS",
              checked: true
            })

            +radio({
              label: "Pink на Android",
              name: "product",
              disabled: true
            })

            +btn({
              type: "submit",
              text: "Отправить форму",
              disabled: true
            })

            .div

            +btn({
              text: "Отправить форму",
              type: "button"
            })

            .div

            +btn({
              text: "Отмена",
              mod: "btn--round  btn--grey"
            })

            .div

            +btn({
              text: "Запостить",
              mod: "btn--round  btn--pink",
              href: "#"
            })

            .div
            .div--bg
              +btn({
                text: "Скачать приложение",
                mod: "btn--round  btn--white",
                href: "#"
              })
